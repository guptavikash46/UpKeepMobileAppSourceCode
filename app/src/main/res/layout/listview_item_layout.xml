<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        card_view:cardCornerRadius="9dp"
        card_view:cardBackgroundColor="#ff000000"
        card_view:cardElevation="10dp"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/imageview_itemlayout"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/money_image" />

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/Tablename_itemlayout"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginLeft="75dp"
            android:background="@android:color/holo_blue_dark"
            android:gravity="center"
            android:text="Total Amount in:"
            android:textColor="#ffff"
            android:textSize="18sp" />

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/tablename_item_layout"
            android:layout_width="95dp"
            android:layout_height="60dp"
           android:layout_marginLeft="165dp"
            android:background="@android:color/holo_blue_dark"
            android:gravity="center"
            android:textColor="#ffff" />

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/Amount_item_layout"
            android:layout_width="85dp"
            android:layout_height="60dp"
            android:layout_marginLeft="260dp"
            android:background="#ff0099cc"
            android:paddingLeft="10dp"
            android:paddingTop="18dp"
            android:textColor="#ffff"
            android:textSize="17sp"/>

    </android.support.v7.widget.CardView>

</LinearLayout>